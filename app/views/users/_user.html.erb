<li>
  <%= gravatar_for user, size: Settings.user_gravatar %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user.current_user?(user) %>
    | <%= link_to t("users.user_html.delete"), user, method: :delete,
                                  data: {confirm: t("users.user_html.sure")}%>
  <% end %>
</li>
