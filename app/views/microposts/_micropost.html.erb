<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
   size: Settings.micropost_gravatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.micropost.html" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t "microposts.micropost.html2" %>
    <% if current_user.current_user? micropost.user %>
      <%= link_to t("microposts.micropost.delete"), micropost, method: :delete,
                                       data:{confirm: t("microposts.micropost.sure")} %>
    <% end %>
  </span>
</li
